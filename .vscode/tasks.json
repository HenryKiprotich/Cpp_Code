{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",                    
                "-std=c++17",            
                "${file}",               
                "-o",                    
                "${fileDirname}/a.exe"   
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile active C++ file using g++ with debug symbols"
        }
    ]
}
